<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="navbar-brand" href="#">Bonjour {{ app.user.username}}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('quack_index') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('quack_new') }}">Créer un nouveau quack</a>
                </li>
                {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link disabled" href="{{ path('security_login') }}">Se connecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('security_logout') }}">Se déconnecter</a>
                    </li>
                {% endif %}
                {% if not app.user %}
                <li class="nav-item">
                    <a class="nav-link disabled" href="{{ path('security_registration') }}">S'enregistrer</a>
                </li>
                {% endif %}
            </ul>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
